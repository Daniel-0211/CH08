<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <Button
        android:id="@+id/m0806_b001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0806_b001"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0806_b002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/m0806_b001"
        android:layout_marginStart="150dp"
        android:layout_toEndOf="@+id/m0806_b001"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0806_b002"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0806_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/m0806_b001"
        android:layout_marginTop="100sp"
        android:gravity="center"
        android:text="@string/m0806_t002"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/myname"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
