<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:padding="@dimen/padding"
    tools:context=".M0801">

    <TextView
        android:id="@+id/m0801_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/teal_200"
        android:text="@string/m0801_t001"
        android:textColor="@color/Black"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/m0801_date01"
        style="@style/MyDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0801_t001"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@color/Olive"
        android:ems="10"
        android:inputType="date" />

    <TimePicker
        android:id="@+id/m0801_time01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0801_date01"
        android:layout_alignStart="@+id/m0801_date01"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_light"
        android:theme="@style/MyTimePicker"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/m0801_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myname"
        android:layout_marginBottom="10dp"
        android:text="@string/m0801_b001"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/myname"
        android:textColor="@color/Yellow"
        android:textSize="18sp" />

</RelativeLayout>